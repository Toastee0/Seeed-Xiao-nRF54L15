/*
 * Comprehensive board overlay for nRF54L15 
 * Includes UART, ADC, Watchdog, DMIC, and more!
 * (Because why not enable everything? ðŸ˜„)
 */

/ {
    zephyr,user {
        io-channels = <&adc 0>, <&adc 1>, <&adc 2>, <&adc 3>,
            <&adc 4>, <&adc 5>, <&adc 6>, <&adc 7>;
    };

    //status_gpio: status_gpio {
    //gpios = <&gp;io1 4 GPIO_ACTIVE_HIGH>;
    //};
};

&wdt31 {
    status = "okay";
};

dmic_dev: &pdm20 {
    status = "okay";
};

&uart21 {
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&uart21_default>;
	pinctrl-1 = <&uart21_sleep>;
	pinctrl-names = "default", "sleep";
};

///{
   // chosen{
       //zephyr,console = &uart20;
  //  };
//};

&pinctrl {
    uart21_default: uart21_default {
         group1 {
               psels = <NRF_PSEL(UART_TX, 2,8)>;
                nordic,drive-mode = <NRF_DRIVE_S0D1>;
               bias-pull-up;
        };

         group2 {
             psels = <NRF_PSEL(UART_RX, 2, 7)>;
            bias-pull-up;
          };
    };

    uart21_sleep: uart21_sleep {
        group1 {
             psels = <NRF_PSEL(UART_TX, 2, 8)>,
              <NRF_PSEL(UART_RX, 2, 7)>;
             low-power-enable;
          };
    };
};